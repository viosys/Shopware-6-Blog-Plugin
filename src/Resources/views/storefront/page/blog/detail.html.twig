{% block base_content %}
<div class="row justify-content-center">
    {% block page_blog_detail %}
        <article class="col-8 mt-5 pt-5 text-center">

            {% block page_blog_detail_title %}
                <h1 class="mb-5">{{ entry.title }}</h1>
            {% endblock %}

            {% block page_blog_detail_content %}
                <div class="sas-blog-content">
                    {{ entry.content|raw }}
                </div>
            {% endblock %}

            <div id="disqus_thread" class="mt-5"></div>
